                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"

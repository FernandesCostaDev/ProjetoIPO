<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Apoio">

    <TextView
        android:id="@+id/textView1"
        style="@style/textView_geral"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/msg_apoio"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/perfil_input"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <CheckBox
                android:id="@+id/ckBox1"
                android:text="@string/label_aeronautica"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox2"
                android:text="@string/label_bombeiroPrivado"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox3"
                style="@style/ckb"
                android:text="@string/label_ciaAgua"

                />

            <CheckBox
                android:id="@+id/ckBox4"
                android:text="@string/label_BpmoaPmpr"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox5"
                android:text="@string/label_CiaEnergia"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox6"
                android:text="@string/label_CbOutroEstado"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox7"
                android:text="@string/label_DefesaCivil"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox8"
                android:text="@string/label_DefesaCivilCompdec"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox10"
                android:text="@string/label_ConcessionariaRodovia"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox11"
                android:text="@string/label_crea"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox12"
                android:text="@string/label_DerDnit"
                style="@style/ckb" />


            <CheckBox
                android:id="@+id/ckBox13"
                android:text="@string/label_exercito"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox14"
                android:text="@string/label_FiscalizacaoMunicipal"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox15"
                android:text="@string/label_GuardaMunicipal"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox16"
                android:text="@string/label_GuardaPortuaria"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox17"
                android:text="@string/label_iap"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox18"
                android:text="@string/label_ibama"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox19"
                android:text="@string/label_iml"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox20"
                android:text="@string/label_instituicaoPrivada"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox21"
                android:text="@string/label_InstituicaoPublica"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox22"
                android:text="@string/label_marinha"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox23"
                android:text="@string/label_pmpr"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox24"
                android:text="@string/label_policiaCientifica"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox25"

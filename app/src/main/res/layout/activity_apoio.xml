                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox28"
                android:text="@string/label_policiaMilitarOutroEstado"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox29"
                android:text="@string/label_policiaRodoviariaFederal"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox30"
                android:text="@string/label_receitaEstadual"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox31"
                android:text="@string/label_vigilinciaSanitaria"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox32"
                android:text="@string/label_vigilinciaSanitariaEstadual"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox33"
                android:text="@string/label_policiaRodoviariaEstadual"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox34"
                android:text="@string/label_prefeituraMunicipal"
                style="@style/ckb" />

            <CheckBox
                android:id="@+id/ckBox35"
                android:text="@string/label_samu"
                style="@style/ckb" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        style="@style/textView2_resumo"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/label_apoio"
        app:layout_constraintBottom_toTopOf="@+id/txt_apoio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <TextView
        android:id="@+id/txt_apoio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/cor_fonte"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_avancar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_avancar"
        style="@style/btn_principal"
        android:text="@string/btn_proximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

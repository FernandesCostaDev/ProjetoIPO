                android:layout_marginBottom="8dp"
                android:text="SAMU"
                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        style="@style/textView2_resumo"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/label_apoio"
        app:layout_constraintBottom_toTopOf="@+id/txt_apoio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <TextView
        android:id="@+id/txt_apoio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/cor_fonte"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_avancar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_avancar"
        style="@style/btn_principal"
        android:enabled="true"
        android:text="@string/btn_avancar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

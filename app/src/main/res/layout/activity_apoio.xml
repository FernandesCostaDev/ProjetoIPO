                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="CB de Outro Estado"
                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Defesa Civil (Casa Militar)"
                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Defesa Civil (COMPDEC)"
                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox9"

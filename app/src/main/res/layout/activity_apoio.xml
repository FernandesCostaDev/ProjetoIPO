                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Receita Estadual"
                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Vigilância Sanitária Municipal"
                android:textColor="@color/cor_fonte"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckBox32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetoIPO" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tom_azul1</item>
        <item name="colorPrimaryVariant">@color/tom_azul2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tom_azul1</item>
        <item name="colorSecondaryVariant">@color/tom_azul1</item>
        <item name="colorOnSecondary">@color/cor_bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#484848</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProjetoIPO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjetoIPO.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProjetoIPO.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/tom_azul2</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.ProjetoIPO</item>
    </style>

</resources>